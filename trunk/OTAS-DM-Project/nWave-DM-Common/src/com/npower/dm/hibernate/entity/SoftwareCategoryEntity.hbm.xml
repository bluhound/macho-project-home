<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
  * $Header: /home/master/nWave-DM-Common/src/com/npower/dm/hibernate/entity/SoftwareCategoryEntity.hbm.xml,v 1.6 2008/08/26 11:18:09 zhao Exp $
  * $Revision: 1.6 $
  * $Date: 2008/08/26 11:18:09 $
-->
<hibernate-mapping>
    <class name="com.npower.dm.hibernate.entity.SoftwareCategoryEntity" table="NW_DM_SOFTWARE_CATEGORY">
        <id name="id" type="long">
            <column name="CATEGORY_ID" precision="20" scale="0" />
            <generator class="native"><param name="sequence">nwavedm_global_sequence</param></generator>
        </id>
        <many-to-one name="parent" class="com.npower.dm.hibernate.entity.SoftwareCategoryEntity" fetch="select">
            <column name="PARENT_CATEGORY_ID" precision="20" scale="0" />
        </many-to-one>
        <property name="name" type="string">
            <column name="NAME" not-null="true" />
        </property>
        <property name="description" type="string">
            <column name="DESCRIPTION" />
        </property>
        <set name="children" inverse="true" order-by="NAME asc">
            <key>
                <column name="PARENT_CATEGORY_ID" precision="20" scale="0" />
            </key>
            <one-to-many class="com.npower.dm.hibernate.entity.SoftwareCategoryEntity" />
        </set>
        <set name="softwareCategoriesSet" inverse="true" order-by="priority asc">
            <key>
                <column name="CATEGORY_ID" precision="20" scale="0" not-null="true" />
            </key>
            <one-to-many class="com.npower.dm.hibernate.entity.SoftwareCategoriesEntity" />
        </set>
        <set name="recommends" inverse="true" order-by="priority asc">
            <key>
                <column name="SOFTWARE_ID" precision="20" scale="0" not-null="true" />
            </key>
            <one-to-many class="com.npower.dm.hibernate.entity.SoftwareRecommendEntity" />
        </set>
    </class>
</hibernate-mapping>
